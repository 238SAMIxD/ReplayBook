<UserControl x:Class="Rofl.UI.Main.Controls.ReplayDetailControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Rofl.UI.Main.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="600"
             Height="600" Width="720"
             HorizontalAlignment="Left"
             VerticalAlignment="Top">

    <StackPanel Orientation="Vertical"
                Background="White"
                Margin="10">

        <StackPanel Orientation="Horizontal"
                    Margin="0 0 0 10">

            <StackPanel Orientation="Vertical">
                <Border BorderThickness="0 0 0 2"
                    BorderBrush="Gray">
                    <TextBox FontSize="25"
                     Background="Transparent"
                     BorderThickness="0"
                     IsReadOnly="True"
                     Text="{Binding Path=PreviewModel.Name, FallbackValue=FileName, Mode=OneWay}"/>
                </Border>

                <StackPanel Orientation="Horizontal"
                        Margin="0 5 0 0">

                    <TextBlock FontSize="14"
                           FontWeight="Bold">
                        <TextBlock.Style>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="Text" Value="VICTORY"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Path=PreviewModel.IsBlueVictorious}" Value="True">
                                        <Setter Property="TextBlock.Text" Value="{StaticResource BlueVictory}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Path=PreviewModel.IsBlueVictorious}" Value="False">
                                        <Setter Property="TextBlock.Text" Value="{StaticResource RedVictory}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <TextBlock Text="-" Padding="5 0 5 0"/>
                    <TextBox Background="Transparent"
                         BorderThickness="0"
                         FontSize="14"
                         IsReadOnly="True"
                         ToolTip="{StaticResource MapNameToolTip}"
                         Text="{Binding Path=PreviewModel.MapName, FallbackValue=MapName, Mode=OneWay}"/>

                    <TextBlock Text="-" Padding="5 0 5 0"/>
                    <TextBox Background="Transparent"
                         BorderThickness="0"
                         FontSize="14"
                         IsReadOnly="True"
                         ToolTip="{Binding Path=PreviewModel.GameDuration}"
                         Text="{Binding Path=PreviewModel.GameLengthString, FallbackValue=GameDuration, Mode=OneWay}"/>

                    <TextBlock Text="-" Padding="5 0 5 0"/>
                    <TextBox Background="Transparent"
                         BorderThickness="0"
                         FontSize="14"
                         IsReadOnly="True"
                         ToolTip="{StaticResource MatchIdToolTip}"
                         Text="{Binding Path=PreviewModel.MatchId, FallbackValue=MatchId, Mode=OneWay}"/>

                    <TextBlock Text="-" Padding="5 0 5 0"/>
                    <TextBox Background="Transparent"
                         BorderThickness="0"
                         FontSize="14"
                         IsReadOnly="True"
                         ToolTip="{StaticResource GameVersionToolTip}"
                         Text="{Binding Path=PreviewModel.GameVersion, FallbackValue=GameVersion, Mode=OneWay}"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Vertical"
                        Margin="20 0 0 0">
                <Button x:Name="PlayButton"
                        Margin="0"
                        Width="90"
                        Height="35"
                        ToolTip="{StaticResource PlayReplayToolTip}"
                        Background="Transparent"
                        BorderBrush="LightGray"
                        BorderThickness="1 1 1 0.5"
                        Padding="5">
                    <DockPanel Background="Transparent"
                               Width="90"
                               Height="25">
                        <TextBlock Text="{StaticResource PlayButtonText}"
                                   FontSize="16"
                                   Margin="0"
                                   DockPanel.Dock="Left"
                                   VerticalAlignment="Center"
                                   TextAlignment="Left"/>
                        <Image Source="{StaticResource PlayDrawingImage}"
                               RenderOptions.BitmapScalingMode="HighQuality"
                               Height="20"
                               Margin="0 0 13 0"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               DockPanel.Dock="Right"/>
                    </DockPanel>
                </Button>
                <Button x:Name="MoreButton"
                        Margin="0 0 0 5"
                        Width="90"
                        Height="25"
                        ToolTip="{StaticResource MoreToolTip}"
                        Background="Transparent"
                        Padding="0"
                        BorderBrush="LightGray"
                        BorderThickness="1 0.5 1 1">
                    <DockPanel Background="Transparent"
                               Width="90"
                               Height="25">
                        <TextBlock Text="{StaticResource MoreButtonText}"
                                   FontSize="14"
                                   Margin="5 0 0 0"
                                   DockPanel.Dock="Left"
                                   TextAlignment="Left"
                                   VerticalAlignment="Center"/>
                        <Image Source="{StaticResource MoreDrawingImage}"
                               RenderOptions.BitmapScalingMode="HighQuality"
                               Margin="0 0 10 0"
                               Height="15"
                               DockPanel.Dock="Right"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"/>
                    </DockPanel>
                </Button>
            </StackPanel>

        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{StaticResource BlueTeamText}"
                       Width="80"
                       FontSize="15"/>

            <Image Source="/ReplayManager;component/Resources/scoreboardicon_score.png"
                   Margin="122 0 0 0"/>

            <TextBlock Text="{Binding Path=BlueKills}"
                       FontSize="15"
                       Margin="0"
                       Padding="0"
                       VerticalAlignment="Center"
                       TextAlignment="Center"
                       Width="25"/>
            <TextBlock Text="/"
                       Margin="0"
                       Padding="0"
                       VerticalAlignment="Center"
                       TextAlignment="Center"
                       Width="10"/>
            
            <TextBlock Text="{Binding Path=BlueDeaths}"
                       FontSize="15"
                       Margin="0"
                       Padding="0"
                       VerticalAlignment="Center"
                       TextAlignment="Center"
                       Width="25"/>
            <TextBlock Text="/"
                       Margin="0"
                       Padding="0"
                       VerticalAlignment="Center"
                       TextAlignment="Center"
                       Width="10"/>
            
            <TextBlock Text="{Binding Path=BlueAssists}"
                       FontSize="15"
                       Margin="0"
                       Padding="0"
                       VerticalAlignment="Center"
                       TextAlignment="Center"
                       Width="25"/>

            <Image Source="/ReplayManager;component/Resources/scoreboardicon_minion.png"
                   Margin="241 0 0 0"/>

            <TextBox Margin="0"
                     Background="Transparent"
                     FontSize="15"
                     VerticalAlignment="Center"
                     TextAlignment="Right"
                     Width="30"
                     BorderThickness="0"
                     IsReadOnly="True"
                     ToolTip="{StaticResource CreepScoreToolTip}"
                     Text="{Binding Path=BlueMinionsKilled, Mode=OneWay, StringFormat={}{0:#,#}}"/>

            <Image Source="/ReplayManager;component/Resources/scoreboardicon_gold.png"
                   Margin="5 0 0 0"/>

            <TextBox Margin="0"
                     Background="Transparent"
                     FontSize="15"
                     VerticalAlignment="Center"
                     TextAlignment="Right"
                     Width="50"
                     BorderThickness="0"
                     IsReadOnly="True"
                     ToolTip="{StaticResource GoldEarnedToolTip}"
                     Text="{Binding Path=BlueGoldEarned, Mode=OneWay, StringFormat={}{0:#,#}}"/>

        </StackPanel>

        <StackPanel>
            <ItemsControl ItemsSource="{Binding Path=BluePlayers}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical" 
                                    Margin="0 5 0 0"
                                    MinHeight="100"
                                    Background="AliceBlue"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:PlayerSummaryControl/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <StackPanel Orientation="Horizontal"
                    Margin="0 10 0 0">
            <TextBlock Text="{StaticResource RedTeamText}"
                       Width="80"
                       FontSize="15"/>

            <Image Source="/ReplayManager;component/Resources/scoreboardicon_score.png"
                   Margin="122 0 0 0"/>

            <TextBlock Text="{Binding Path=RedKills}"
                       FontSize="15"
                       Margin="0"
                       Padding="0"
                       VerticalAlignment="Center"
                       TextAlignment="Center"
                       Width="25"/>
            <TextBlock Text="/"
                       Margin="0"
                       Padding="0"
                       VerticalAlignment="Center"
                       TextAlignment="Center"
                       Width="10"/>

            <TextBlock Text="{Binding Path=RedDeaths}"
                       FontSize="15"
                       Margin="0"
                       Padding="0"
                       VerticalAlignment="Center"
                       TextAlignment="Center"
                       Width="25"/>
            <TextBlock Text="/"
                       Margin="0"
                       Padding="0"
                       VerticalAlignment="Center"
                       TextAlignment="Center"
                       Width="10"/>

            <TextBlock Text="{Binding Path=RedAssists}"
                       FontSize="15"
                       Margin="0"
                       Padding="0"
                       VerticalAlignment="Center"
                       TextAlignment="Center"
                       Width="25"/>

            <Image Source="/ReplayManager;component/Resources/scoreboardicon_minion.png"
                   Margin="241 0 0 0"/>

            <TextBox Margin="0"
                     Background="Transparent"
                     FontSize="15"
                     VerticalAlignment="Center"
                     TextAlignment="Right"
                     Width="30"
                     BorderThickness="0"
                     IsReadOnly="True"
                     ToolTip="{StaticResource CreepScoreToolTip}"
                     Text="{Binding Path=RedMinionsKilled, Mode=OneWay, StringFormat={}{0:#,#}}"/>

            <Image Source="/ReplayManager;component/Resources/scoreboardicon_gold.png"
                   Margin="5 0 0 0"/>

            <TextBox Margin="0"
                     Background="Transparent"
                     FontSize="15"
                     VerticalAlignment="Center"
                     TextAlignment="Right"
                     Width="50"
                     BorderThickness="0"
                     IsReadOnly="True"
                     ToolTip="{StaticResource GoldEarnedToolTip}"
                     Text="{Binding Path=RedGoldEarned, Mode=OneWay, StringFormat={}{0:#,#}}"/>

        </StackPanel>

        <StackPanel>
                <ItemsControl ItemsSource="{Binding Path=RedPlayers}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical" 
                                        Margin="0 5 0 0"
                                        MinHeight="100"
                                        Background="MistyRose"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <local:PlayerSummaryControl/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            
    </StackPanel>
    
</UserControl>
