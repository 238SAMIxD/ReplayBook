<Window x:Class="Rofl.UI.Main.Views.PlayerMarkerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rofl.UI.Main.Views"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="{StaticResource PlayerMarkerWindowText}" 
        Height="165" Width="300"
        ResizeMode="NoResize"
        Icon="{StaticResource SettingsDrawingImage}">
    <DockPanel Margin="5">
        <StackPanel Orientation="Vertical"
                    DockPanel.Dock="Top">
            <TextBlock Text="Player Name"/>
            <TextBox x:Name="NameTextBox" Margin="0 5 0 5" Padding="2"/>
            <TextBlock Text="Marker Color"/>
            <xctk:ColorPicker x:Name="MarkerColorPicker" DisplayColorAndName="True" ColorMode="ColorCanvas" ShowTabHeaders="False"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" 
                    Width="200"
                    HorizontalAlignment="Left"
                    Margin="0 10 0 0"
                    DockPanel.Dock="Bottom">
            <Button x:Name="SaveButton" Content="{StaticResource SaveButtonText}"
                    Width="70"
                    Margin="0 0 5 0"
                    Click="SaveButton_Click"/>
            <Button x:Name="CancelButton" Content="{StaticResource CancelButtonText}"
                    Width="70"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </DockPanel>
    
</Window>
