<Window x:Class="Rofl.UI.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rofl.UI.Main"
        xmlns:controls="clr-namespace:Rofl.UI.Main.Controls"
        xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="{StaticResource ProgramName}" 
        Icon="{StaticResource ProgramIcon}"
        ResizeMode="CanResize"
        MinHeight="655"
        MinWidth="1150"
        Height="655" 
        Width="1150">
    
    <Window.Resources>
        <CollectionViewSource x:Key="PreviewReplaysView" 
                              Source="{Binding Path=PreviewReplays}"
                              Filter="PreviewReplaysView_Filter">
        </CollectionViewSource>
    </Window.Resources>
    
    <DockPanel>
        
        <DockPanel DockPanel.Dock="Left">

            <controls:ToolPanelControl x:Name="ToolPanel"
                                DockPanel.Dock="Top"/>

            <ListView x:Name="ReplayListView"
                      Style="{StaticResource ReplayListStyle}"
                      ItemsSource="{Binding Source={StaticResource PreviewReplaysView}}"
                      ItemContainerStyle="{StaticResource ReplayListItemStyle}"
                      Loaded="ReplayListView_Loaded">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <controls:ReplayItemControl MouseDoubleClick="ReplayItemControl_MouseDoubleClick"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </DockPanel>

        <controls:ReplayDetailControl x:Name="DetailView"/>

    </DockPanel>
    
</Window>
